datasource db {
   provider = "sqlite"
   url      = "file:dev.db"
}

generator client {
   provider      = "prisma-client-js"
   binaryTargets = ["native"]
}

model Product {
   id          Int    @id @default(autoincrement())
   name        String @unique
   germination Int
   harvest     Int
   seedCost    Float
}

model Client {
   clientId      String @id @default(uuid())
   name          String @unique
   streetAddress String
   state         String
   zipcode       String
   country       String
   contactEmail  String @unique
   contactPhone  String @unique
}
